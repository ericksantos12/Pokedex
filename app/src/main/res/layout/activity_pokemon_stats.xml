<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pokemon_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8B8B8"
    android:orientation="vertical"
    tools:context=".PokemonStatsActivity"
    android:gravity="center_horizontal">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:gravity="center_vertical|center_horizontal"
        >

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/arrow_left"
            android:layout_marginHorizontal="8dp"/>
        <TextView
            android:id="@+id/pokemon_name"
            android:layout_width="231dp"
            android:layout_height="32dp"
            android:text="PokÃ©mon Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:lineSpacingExtra="-4sp"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="8dp"
            />

        <TextView
            android:id="@+id/pokemon_id"
            android:layout_width="33dp"
            android:layout_height="16dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="-2sp"
            android:text="@string/some_id"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginHorizontal="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_horizontal|bottom"
        android:clipChildren="true"
        android:layout_marginBottom="-56dp"
        android:translationZ="1dp">

<!--        <ImageView-->
<!--            android:id="@+id/chevron_left"-->
<!--            android:layout_width="24dp"-->
<!--            android:layout_height="24dp"-->
<!--            android:src="@drawable/chevron_left"-->
<!--            android:layout_marginBottom="72dp"-->
<!--            android:layout_weight="1" />-->

        <ImageView
            android:id="@+id/pokemon_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/silhouette"
            android:layout_weight="1"
            />

<!--        <ImageView-->
<!--            android:id="@+id/chevron_right"-->
<!--            android:layout_width="24dp"-->
<!--            android:layout_height="24dp"-->
<!--            android:src="@drawable/chevron_right"-->
<!--            android:layout_marginBottom="72dp"-->
<!--            android:layout_weight="1"/>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/card"
        android:paddingTop="56dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/pokemon_type_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="18sp"
            android:textColor="#B8B8B8"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/pokemon_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,0 kg"
                    android:drawablePadding="8dp"
                    app:drawableLeftCompat="@drawable/weight"
                    android:paddingVertical="8dp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:textSize="12sp"
                    android:textColor="@color/medium"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/pokemon_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,0 m"
                    android:drawablePadding="8dp"
                    app:drawableLeftCompat="@drawable/straighten"
                    android:paddingVertical="8dp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textSize="12sp"
                    android:textColor="@color/medium"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/pokemon_moves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Implemented"
                    android:drawablePadding="8dp"
                    android:paddingVertical="8dp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Moves"
                    android:textSize="12sp"
                    android:textColor="@color/medium"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/pokemon_description"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginVertical="25dp"/>
        <TextView
            android:id="@+id/base_stats_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base Stats"
            android:textSize="18sp"
            android:textColor="#B8B8B8"
            android:textStyle="bold"/>

        <!--=========================================-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">
            <!-- Attributes -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HP"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ATK"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SATK"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SDEF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPD"/>
            </LinearLayout>

            <!-- Values -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="5dp">
                <TextView
                    android:id="@+id/hp_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"/>
                <TextView
                    android:id="@+id/atk_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"/>
                <TextView
                    android:id="@+id/def_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"/>
                <TextView
                    android:id="@+id/satk_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"/>
                <TextView
                    android:id="@+id/sdef_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"/>
                <TextView
                    android:id="@+id/spd_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"/>
            </LinearLayout>

            <!-- Progress Bars -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="5dp">
                <ProgressBar
                    android:id="@+id/hp_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="10dp"
                    android:minHeight="10dp"
                    android:progress="100"
                    android:max="255"
                    android:padding="4.75dp"
                    style="@style/MyProgressBar"
                    android:layout_weight="1"
                    />
                <ProgressBar
                    android:id="@+id/atk_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="10dp"
                    android:minHeight="10dp"
                    android:progress="100"
                    android:max="255"
                    android:padding="4.75dp"
                    style="@style/MyProgressBar"
                    android:layout_weight="1"
                    />
                <ProgressBar
                    android:id="@+id/def_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="10dp"
                    android:minHeight="10dp"
                    android:progress="100"
                    android:max="255"
                    android:padding="4.75dp"
                    style="@style/MyProgressBar"
                    android:layout_weight="1"
                    />
                <ProgressBar
                    android:id="@+id/satk_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="10dp"
                    android:minHeight="10dp"
                    android:progress="100"
                    android:max="255"
                    android:padding="4.75dp"
                    style="@style/MyProgressBar"
                    android:layout_weight="1"
                    />
                <ProgressBar
                    android:id="@+id/sdef_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="10dp"
                    android:minHeight="10dp"
                    android:progress="100"
                    android:max="255"
                    android:padding="4.75dp"
                    style="@style/MyProgressBar"
                    android:layout_weight="1"
                    />
                <ProgressBar
                    android:id="@+id/spd_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="10dp"
                    android:minHeight="10dp"
                    android:progress="100"
                    android:max="255"
                    android:padding="4.75dp"
                    style="@style/MyProgressBar"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--=========================================-->
    </LinearLayout>
</LinearLayout>